<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h2>Add event</h2>

<%=
  form_for :event, routes.events_path do
    div class: 'input' do
      label      :title
      text_field :title
    end

    div class: 'input' do
      label      :description
      text_field :description
    end

     div class: 'input' do
      label      :location
      text_field :location
    end


     div class: 'input' do
      label      :start_time
      datetime_field :statrt_time
    end


     div class: 'input' do
      label      :end_time
      datetime_field :end_time
    end

    div class: 'controls' do
      submit 'Create Event'
    end
  end
%>